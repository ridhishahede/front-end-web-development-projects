<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Age Calculator Result</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>


  <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">

  <style>
        body {
      background-color: hsl(0, 0%, 94%);
      display: flex;
      justify-content: center;
      font-family: 'Poppins', sans-serif;
    }

    .float-container {
      width: 40%;
      margin-top: 9%;
      background-color: white;
      padding: 2% 3% 3% 2%;
      border-bottom-right-radius: 40%;
    }

    .float-child {
      width: 100px; 
      float:left; 
      height:100px; 
      margin:10px;
      margin-bottom: 10px;
    }

    @media (max-width: 767px) {
      .float-container {
        width: 90%;
        height: auto;
      }

    .float-child {
      width: 50px; 
      float:left; 
      height:50px; 
      margin:35px;
      margin-bottom: 40px;
    }

    .input-box:hover {
      border-color: blueviolet;
    }

    .input-box {
      width: 50px; 
      height: 20px;
      border-radius: 10px;
      font-family: 'Poppins', sans-serif;
      font-weight: bold;
      font-size: 1.2rem;
    }
  }

    .input-box {
      width: 105px; 
      height: 50px;
      border-radius: 10px;
      font-family: 'Poppins', sans-serif;
      font-weight: bold;
      font-size: 1.2rem;
    }

    .input-box::placeholder {
      color: grey;
      opacity: 2;
      font-weight: bold;
      text-align: center;
      font-size: 1.2rem;
    }

    .float-child-button {
    display: flex;
    align-items: center;
    height: 20px;
    clear: both;
  }

  .button {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    padding: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: blueviolet;
    border: none;
  }

  .button:hover {
    background-color: black;
  }

  .button img {
    width: 30px;
    height: 30px;
  }

  .float-child-button hr {
    flex-grow: 1;
    margin: 0;
  }

  .container {
    display: flex;
  }

  .label {
    margin: 0 2% 0 2%;
    font-size: 4rem;
    font-weight: bold;
  }

  .value {
    margin: 0 2% 0 2%;
    font-size: 4rem;
    color: blueviolet;
    transform: skew(-20deg);
    font-weight: bold;
  }
  </style>
</head>
<body>
  <div class="container-fluid float-container">
    <form action="/" method="post" id="ageForm">
      <div class="input-div">
        <div class="inputdate float-child">
          <label for="day">Day</label>
          <input class="input-box" type="number" id="day" name="day" value="<%= birthDate %>" readonly>
        </div>
        <div class="inputdate float-child">
          <label for="month">Month</label>
          <input class="input-box" type="number" id="month" name="month" value="<%= birthMonth %>" readonly>
        </div>
        <div class="inputdate float-child">
          <label for="year">Year</label>
          <input class="input-box" type="number" id="year" name="year" value="<%= birthYear %>" readonly>
        </div>
      </div>
      <br> <br> <br>
      <div  class="float-child-button">
        <hr>
        <button type="submit" name="submit" class="btn btn-lg button">
          <img src="/images/icon-arrow.svg" alt="Button Icon" />
        </button>        
      </div>
    </form>
    
    <div id="results">
      <div class="container">
        <p class="value"><%= age.years %></p>
        <p class="label"><strong>Years</strong></p>
      </div>
      <div class="container">
        <p class="value"><%= age.months %></p>
        <p class="label"><strong>Months</strong></p>
      </div>
      <div class="container">
        <p class="value"><%= age.days %></p>
        <p class="label"><strong>Days</strong></p>
      </div>
    </div>
  </div>
 
  

  <script>
    const ageForm = document.getElementById("ageForm");
    const resultsDiv = document.getElementById("results");

    ageForm.addEventListener("submit", function(event) {
      event.preventDefault(); // Prevent the form from submitting normally
      const formData = new FormData(this);

      fetch("/", {
        method: "POST",
        body: formData
      })
      .then(response => response.json())
      .then(data => {
        const { years, months, days } = data;
        resultsDiv.innerHTML = `
          <p>Years: ${years}</p>
          <p>Months: ${months}</p>
          <p>Days: ${days}</p>
        `;
      })
      .catch(error => {
        console.error(error);
        resultsDiv.innerHTML = "An error occurred.";
      });
    });
  </script>
</body>
</html>
